{
    "name": "opis/http",
    "description": "Http abstraction",
    "keywords": ["opis", "http", "request", "response", "http abstraction"],
    "homepage": "https://opis.io/http",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Sorin Sarca",
            "email": "sarca_sorin@hotmail.com"
        },
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "opis/stream": "2020.x-dev",
        "opis/utils": "2020.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Opis\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\Http\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "2020.x-dev"
        }
    }
}
